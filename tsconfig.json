{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2018",
    "outDir": "dist",
    "lib": ["ES2020"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true
  },
  "exclude": ["node_modules", ".vscode-test"],
  "include": ["src"]
}
